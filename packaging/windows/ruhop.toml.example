# Ruhop VPN Client Configuration
# Copy this file to %APPDATA%\Ruhop\ruhop.toml and edit as needed

[common]
# Pre-shared key (must match server)
key = "your-secret-key-here"

# MTU for the tunnel interface
mtu = 1400

# Log level: error, warn, info, debug, trace
log_level = "info"

# Enable packet obfuscation
obfuscation = false

# Heartbeat interval in seconds
heartbeat_interval = 30

# Optional: Log to file with time-based rotation
# log_file = "C:\\ProgramData\\Ruhop\\logs"
# log_rotation = "daily"  # Options: "hourly", "daily", "never"

[client]
# Server address (hostname or IP, or array for multi-homed servers)
server = "vpn.example.com"
# server = ["vpn1.example.com", "vpn2.example.com"]

# Port range (must match server configuration)
port_range = [4096, 4196]

# Route all traffic through VPN
route_all_traffic = true

# Automatically reconnect on connection loss
auto_reconnect = true

# Delay between reconnection attempts (seconds)
reconnect_delay = 5
