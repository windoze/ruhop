config ruhop 'main'
	option enabled '0'
	option mode 'client'
	option config '/etc/ruhop/ruhop.toml'

config common 'common'
	option key ''
	option mtu '1400'
	option log_level 'info'
	option obfuscation '0'
	option heartbeat_interval '30'
	option use_nftables '1'

config server 'server'
	option listen '0.0.0.0'
	option port_start '4096'
	option port_end '4196'
	option tunnel_network '10.0.0.0/24'
	option max_clients '100'
	option enable_nat '1'
	option dns_proxy '0'
	list dns_servers '8.8.8.8'
	list dns_servers '1.1.1.1'

config client 'client'
	list server ''
	option port_start '4096'
	option port_end '4196'
	option route_all_traffic '1'
	option mss_fix '0'
	option auto_reconnect '1'
	option max_reconnect_attempts '0'
	option reconnect_delay '5'

config probe 'probe'
	option probe_enabled '0'
	option probe_interval '10'
	option probe_threshold '0.5'
	option probe_blacklist_duration '300'
	option probe_min_probes '3'

config client_dns_proxy 'client_dns_proxy'
	option dns_proxy_enabled '0'
	option dns_proxy_port '53'
	option dns_proxy_filter_ipv6 '0'
